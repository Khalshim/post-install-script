#!/usr/bin/env bash
#
# Post-installation Configuration Scripts
#
# configure users
# - Add khalshim users
# - Configure install ssh public key

URI_ROOT="https://raw.githubusercontent.com/Khalshim/post-install-script/master/scripts/.bashrc"

do_cfg_etc_skel() {
	rm -f /etc/skel/.bashrc
	wget --no-check-certificate -P /etc/skel $URI_ROOT
}

do_add_sudo_user () {
	adduser --disabled-password --gecos $1
}

main () {
	do_cfg_etc_skel
	do_add_sudo_user $1
}


main $1
